<launch>

  <arg name="debug" default="false" />
  <arg unless="$(arg debug)" name="launch_prefix" value="" />
  <arg     if="$(arg debug)" name="launch_prefix" value="gdb --ex run --args" />

  <arg name="rgbd1" default="false"/>
  <arg name="rgbd2" default="false"/>
  <include if="$(arg rgbd1)" file="$(find mm_slam)/launch/mm_combine_rgbd.launch">
    <arg name="camera"    value="kinect1"/>
  </include>
  <include if="$(arg rgbd2)" file="$(find mm_slam)/launch/mm_combine_rgbd.launch">
    <arg name="camera"    value="kinect2"/>
    <arg name="max_depth" value="2.0"/>
  </include>
  

  <arg name="mm" default="false" />
  <arg     if="$(arg mm)" name="command_args" value="-d $(find ur5_moveit_config)/rviz/mm_moveit.rviz" />
  <arg unless="$(arg mm)" name="command_args" value="-d $(find ur5_moveit_config)/rviz/moveit.rviz" />

  <node name="$(anon rviz)" launch-prefix="$(arg launch_prefix)" pkg="rviz" type="rviz" respawn="false"
  args="$(arg command_args)" output="screen">
    <rosparam command="load" file="$(find mm_moveit_config)/config/kinematics.yaml"/>
  </node>

</launch>
